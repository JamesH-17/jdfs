package com.subject17.jdfs.client.settings;

import java.io.File;
import java.io.FileNotFoundException;

public abstract class Settings {
	protected final String defaultSettingsFileName = "settings.conf";
	protected static String settingsFileName;
	protected static String settingsFilePath;
	
	protected static String peerFileName;
	protected static String peerFilePath;
	
	protected static String userFileName;
	protected static String userFilePath;
	
	protected static String watchFileName;
	protected static String watchFilePath;
	
	protected static String storageDirectory;
	
	protected static void setPeersFilename(String fname){
		peerFileName = fname;
	}
	
	
	protected static void setPeersFileLocation(String path, String fname){
		peerFilePath = path;
		peerFileName = fname;
	}
	protected static void setUsersFileLocation(String path, String fname){
		userFilePath = path;
		userFileName = fname;
	}
	protected static void setWatchFileLocation(String path, String fname){
		watchFilePath = path;
		watchFileName = fname;
	}
	protected static void setStorageDirectory(String path){
		storageDirectory = path;
	}
	
}
