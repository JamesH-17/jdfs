package com.subject17.jdfs.client.settings;

import java.io.File;
import java.io.FileNotFoundException;

public abstract class Settings {
	protected final String defaultSettingsFileName = "settings.conf";
	protected final String defaultSettingsFilePath = "~/";
	
	protected static File settingsFile;
	protected static File peerFile;
	protected static File userFileName;
	protected static File watchFileName;
	protected static File storageDirectory;
	
	protected static void setPeersFilename(String fname){
		String path = peerFile.getPath();
	}
	
	protected static File setFileName(File file, String newName) {
		return new File(file.getPath(), newName);
	}
	
	
	protected static void setPeersFileLocation(String path, String fname){
		peerFilePath = path;
		peerFileName = fname;
	}
	protected static void setUsersFileLocation(String path, String fname){
		userFilePath = path;
		userFileName = fname;
	}
	protected static void setWatchFileLocation(String path, String fname){
		watchFilePath = path;
		watchFileName = fname;
	}
	protected static void setStorageDirectory(String path){
		storageDirectory = path;
	}
	
}
